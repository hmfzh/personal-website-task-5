    <div>
        <h3 class="text-center mt-5 header-name">GET IN TOUCH</h3>
      
        <div class="container container-me">
            <form class="row g-3" action="" id="form-style" onsubmit="addProject(event)">
              <div class="col-12">
                <label for="">Name</label>
                <input type="text" name="name" id="name" class="form-control" required />
              </div>
          
              <div class="col-12">
                <label for="">Email</label>
                <input type="text" name="email" id="email" class="form-control" required />
              </div>
          
              <div class="col-12">
                <label for="">Phone</label>
                <input type="number" name="phone" id="phone" class="form-control" required />
              </div>
          
              <div class="col-12">
                <label for="">Subject</label>
                <select name="" id="subject" class="form-select">
                  <option value="Fullstack Developer">Fullstack Developer</option>
                  <option value="Frontend Developer">Frontend Developer</option>
                  <option value="Backend Developer">Backend Developer</option>
                </select>
              </div>
          
              <div class="col-12">
                <label for="message">Your Message</label>
                <textarea rows="5" cols="50" id="message" class="form-control"></textarea>
              </div>
          
              <div class="col-12 btn-container-me">
                <button type="submit" class="btn btn-primary button-submit">Submit</button>
              </div>
            </form>
          </div>
