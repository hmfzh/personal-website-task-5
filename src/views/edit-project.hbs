                                value="{{project.start_date}}" required>
                        </div>
                        <div class="col-6">
                            <label for="end-date">End Date</label>
                            <input type="date" name="end_date" id="end-date" class="form-control"
                                value="{{project.endDate}}" required>
                        </div>
                    </div>
                </div>
                {{!-- Message --}}
                <div class="col-12">
                    <label for="message">Your Message</label>
                    <textarea rows="5" cols="50" id="message" name="message"
