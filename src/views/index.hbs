<body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary px-5">
        <div class="container-fluid">
            <img src="asset/img/logo.jpg" alt="" class="img-fluid img-nav" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02"
                aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarTogglerDemo02">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                    <li class="nav-item hover ">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item hover ">
                        <a class="nav-link " href="/addmyproject">My Project</a>
                    </li>
                    <li class="nav-item hover ">
                        <a class="nav-link " href="/testimonial">Testimonial</a>
                    </li>

                </ul>





                {{#if user}}


                <div class="d-flex flex-column mx-3">
                    <h5 style="margin: 0;padding:0;">Halo </h5>
                    <p style="margin: 0;padding:0;">{{user.name}}!</p>
                </div>

                <form action="/logout" method="post" onsubmit="confirmLogout(event)">

                    <button class="btn btn-light rounded-pill px-4 mx-2" type="submit" style="border: 1px solid black;">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                    </button>
                </form>

                {{else}}
                <div class="dropdown" style="margin-right: 10px;">
                    <button class="btn btn-light rounded-pill" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                        style="border: 1px solid black;">
                        <i class="bi bi-person">MASUK</i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/login">Login</a>
                        <a class="dropdown-item" href="/register">Register</a>
                    </div>
                </div>
                {{/if}}

                <div class=" mb-2 mb-lg-0 mt-1">
                    <button class="btn btn-light rounded-pill" type="submit" style="border: 1px solid black;">
                        <a class="text-dark" href="/contact">Contact Me</a>
                    </button>
                </div>
                </form>
            </div>
        </div>
    </nav>


    {{#if messages.success}}
    <div class="alert alert-success" role="alert">
        {{messages.success}}
    </div>
    {{/if}}

    <div class="container mt-5 d-flex-me">
        <div class="row align-items-center">

            <div class="col-12 col-md-6 ">
                <h2>Hi Welcome to my hut</h2>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. In ea magni
